{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es2020",
        "lib": ["es2020"], 
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "declarationDir": "./dist",
        // "rootDir": "src",
        "incremental": true,
        "paths": {},
        "strict": true,                        
        "noImplicitAny": true,                 
        "strictNullChecks": true,              
        "strictPropertyInitialization": true,  
        "strictFunctionTypes": true,                    
        "noImplicitThis": true,
        "alwaysStrict": true,     
    },

    "exclude": [
        "./test",
        "./dist/**/*",
        "node_modules"
    ],

    "references": []
}
